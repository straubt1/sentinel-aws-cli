import "helper"

# Test cases array for easy modification
test_cases = [
	{
		"input":       [255],
		"expected":    "000000ff",
		"description": "Basic power calculation",
	},
	{
		"input":       [0],
		"expected":    "00000000",
		"description": "Zero value",
	},
	{
		"input":       [1],
		"expected":    "00000001",
		"description": "Minimum positive value",
	},
	{
		"input":       [16],
		"expected":    "00000010",
		"description": "Simple hex conversion",
	},
	{
		"input":       [4294967295],
		"expected":    "ffffffff",
		"description": "Maximum 32-bit unsigned integer",
	},
	{
		"input":       [256],
		"expected":    "00000100",
		"description": "Power of 2",
	},
	{
		"input":       [65535],
		"expected":    "0000ffff",
		"description": "Maximum 16-bit value",
	},
	{
		"input":       [3735928559],
		"expected":    "deadbeef",
		"description": "Common hex pattern",
	},
]

# Execute all test cases
test_results = []
for test_cases as c {
	result = helper.to_hex8(c.input[0])
	passed = result == c.expected
	test_results = test_results + [{
		"description": c.description,
		"input":       c.input,
		"expected":    c.expected,
		"actual":      result,
		"passed":      passed,
	}]
	print("Test:", c.description)
	print("Input:", c.input)
	print("Expected:", c.expected)
	print("Actual:", result)
	print("Passed:", passed)
	print("---")
}

# Main rule - all tests must pass
main = rule {
	all test_results as test {
		test.passed
	}
}
